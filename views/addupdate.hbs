{{> head }}

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top header-bg-dark">
        <div class="container">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

<section class="showcase">
    <div class="container">
        <div class="pb-2 mt-4 mb-2 border-bottom">
            <h2>Note dinamiche con MongoDB/Mongoose, Express, Handlebars</h2>
        </div>
        <div class="row">
            <div class="col-sm-10 offset-md-1">
                <form action="/" method="POST" autocomplete="off">
                    <input type="hidden" name="_id" value="{{nota._id}}">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Nome</label>
                            <input type="text" class="form-control" name="name" placeholder="nome"
                                value="{{nota.name}}"></div>
                                <div class="form-group col-md-6">
                                    <label>Cognome</label>
                                    <input type="text" class="form-control" name="surname" placeholder="nome" value="{{nota.surname}}">
                                </div>
                            
                        <div class="form-group col-md-6">
                            <label>Email</label>
                            <input type="text" class="form-control" name="email" placeholder="Email"
                                value="{{nota.email}}">
                            
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Indirizzo</label>
                        <textarea class="form-control" name="address"
                            placeholder="indirizzo">{{nota.address}}</textarea>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Telefono</label>
                            <input type="text" class="form-control" name="mobile" placeholder="telefono"
                                value="{{nota.mobile}}">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Testo</label>
                            <input type="text" class="form-control" name="text" placeholder="testo"
                                value="{{nota.text}}">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Anni</label>
                            <input type="text" class="form-control" name="age" placeholder="anni" value="{{nota.age}}">
                        </div>
                    
                    </div>
                    <div class="form-group float-right my-5">
                        <button type="submit" class="btn btn-primary btn-sm"> Invia </button>
                        <a class="btn btn-info btn-sm" href="/list"> Vedi tutti</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{{> footer }}